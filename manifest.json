{
  "name": "TTV live",
  "version": "1.0",
  "description": "TTV live extension helps you keep track of who is live out of the channels you follow on twitch.tv",
  "browser_action": {
    "default_title": "TTV live",
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "icons":{
    "16":  "icons/icon-16.png",
    "48":  "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "activeTab"
  ],
  "background": {
    "run_at": "document_start",
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.player.twitch.tv/?*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
